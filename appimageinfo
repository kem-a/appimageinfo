#!/bin/bash

# Check if an AppImage file is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <appimage-file>"
    exit 1
fi

APPIMAGE_FILE="$1"

# Add './' prefix if the file is in the current directory and does not already start with './'
if [[ "$APPIMAGE_FILE" != /* && "$APPIMAGE_FILE" != ./* ]]; then
    APPIMAGE_FILE="./$APPIMAGE_FILE"
fi

# Check if the file exists
if [ ! -f "$APPIMAGE_FILE" ]; then
    echo "Error: File '$APPIMAGE_FILE' not found!"
    exit 1
fi

echo "Analyzing AppImage: $APPIMAGE_FILE"

# Find all 'hsqs' (SquashFS magic) offsets in the file
OFFSETS=$(grep -aob 'hsqs' "$APPIMAGE_FILE" | cut -d: -f1)

if [ -z "$OFFSETS" ]; then
    echo "Error: No SquashFS magic bytes found. Make sure the file is a valid AppImage."
    exit 1
fi

# Validate each offset (starting from last) to find a real SquashFS v4 superblock
OFFSET=""
TMPCHUNK=$(mktemp)
for candidate in $(echo "$OFFSETS" | sort -rn); do
    dd if="$APPIMAGE_FILE" bs=1 skip="$candidate" count=512 of="$TMPCHUNK" 2>/dev/null
    if file "$TMPCHUNK" | grep -qi 'squashfs.*version 4'; then
        OFFSET="$candidate"
        break
    fi
done
rm -f "$TMPCHUNK"

# Check if offset was obtained successfully
if [ -z "$OFFSET" ]; then
    echo "Error: No valid SquashFS v4 superblock found. Make sure the file is a valid AppImage."
    exit 1
fi

echo "SquashFS offset: $OFFSET"
echo "----------------------------------------"

# Use unsquashfs to show filesystem info, redirecting stderr to stdout and filtering output
unsquashfs -o "$OFFSET" -stat "$APPIMAGE_FILE" 2>&1 | grep -v "Parallel unsquashfs"
